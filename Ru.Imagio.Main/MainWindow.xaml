<Window x:Class="Ru.Imagio.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:Ru.Imagio.View;assembly=Ru.Imagio.View"
        xmlns:viewModel="clr-namespace:Ru.Imagio.ViewModel;assembly=Ru.Imagio.ViewModel"
        xmlns:indicators="clr-namespace:Ru.Imagio.View.Indicators;assembly=Ru.Imagio.View"
        Title="Document" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <indicators:WaitIndicator x:Key="WaitIndicator" />
    </Window.Resources>
    
    <ContentControl Focusable="False" Content="{Binding Path=(viewModel:ShellViewModel.Handle), IsAsync=True, FallbackValue={StaticResource WaitIndicator}}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewModel:ShellViewModel}">
                <view:ShellView></view:ShellView>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
    
</Window>
