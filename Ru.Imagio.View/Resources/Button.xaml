            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#5bc0de"></Setter>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="#5bc0de"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

