<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="ForegroundColor">#333333</Color>
    <SolidColorBrush x:Key="ForegrounBrush" Color="{StaticResource ForegroundColor}"></SolidColorBrush>
    
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"></SolidColorBrush>
    
    <Color x:Key="BorderColor">#CCCCCC</Color>    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"></SolidColorBrush>

    <Color x:Key="FocusBorderColor">#5C5C5C</Color>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource FocusBorderColor}"></SolidColorBrush>
    
    <Color x:Key="TextForegroundColor">#555555</Color>
    <SolidColorBrush x:Key="TextForegroundBrush" Color="{StaticResource TextForegroundColor}"></SolidColorBrush>

    <SolidColorBrush x:Key="DisableBorderBrush" Color="{StaticResource BorderColor}"></SolidColorBrush>

    <Color x:Key="DisableBackgroundColor">#EEEEEE</Color>
    <SolidColorBrush x:Key="DisableBackgroundBrush" Color="{StaticResource DisableBackgroundColor}"></SolidColorBrush>

    <SolidColorBrush x:Key="DisableForegroundBrush" Color="{StaticResource TextForegroundColor}"></SolidColorBrush>
    
    
    
    <FontFamily x:Key="FontFamily">Segoe UI</FontFamily>
    
</ResourceDictionary>