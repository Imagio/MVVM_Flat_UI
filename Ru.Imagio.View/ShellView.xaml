<UserControl x:Class="Ru.Imagio.View.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Ru.Imagio.ViewModel;assembly=Ru.Imagio.ViewModel"
             xmlns:view="clr-namespace:Ru.Imagio.View"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewModel:ShellViewModel}">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Indicator.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ContentControl Content="{Binding ActiveShell, IsAsync=True, FallbackValue={StaticResource WaitIndicator}}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewModel:SignViewModel}">
                <view:SignView />
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>

   
</UserControl>
